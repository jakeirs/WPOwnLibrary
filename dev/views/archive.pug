                  strong porównywarki, finanse, aktualności, ogłoszenia

      .pagination-container.margin--small-default-bottom-down.margin--medium-huge-bottom
        ul.pagination.text--left(role="navigation" aria-label="Pagination")
          li.pagination-first.disabled
            a.pagination-item(href="#" aria-label="First")
              | <<&nbsp;
              span.show-for-sr first page
          li.pagination-previous.disabled
            a.pagination-item(href="#" aria-label="Prev")
              | prev&nbsp;
              span.show-for-sr page
          li.current
            span.pagination-item
              span.show-for-sr page:&nbsp;
              | 1
          li
            a.pagination-item(href="#" aria-label="Strona 2") 2
          li
            a.pagination-item(href="#" aria-label="Strona 3") 3
          li
            a.pagination-item(href="#" aria-label="Strona 4") 4
          li
            a.pagination-item(href="#" aria-label="Strona 5") 5
          li
            a.pagination-item(href="#" aria-label="Strona 6") 6
          li
            a.pagination-item(href="#" aria-label="Strona 7") 7
          li.pagination-next
            a.pagination-item(href="#" aria-label="Next")
              | next&nbsp;
              span.show-for-sr page
          li.pagination-last
            a.pagination-item(href="#" aria-label="Last")
              | >>&nbsp;
              span.show-for-sr last page


    include footer.pug